<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/idJadwal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/matkulJadwal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_toStartOf="@id/hari"
        android:maxLines="2"
        android:paddingRight="@dimen/dimen_3dp"
        android:paddingLeft="@dimen/dimen_3dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:textSize="@dimen/dimen_15sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/hari"
        android:layout_width="@dimen/dimen_75dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/waktu"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingRight="@dimen/dimen_3dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:textSize="@dimen/dimen_15sp"
        android:visibility="visible"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/waktu"
        android:layout_width="@dimen/dimen_75dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/ruangan"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingRight="@dimen/dimen_3dp"
        android:paddingLeft="@dimen/dimen_3dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:textSize="@dimen/dimen_15sp"
        android:visibility="visible"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/ruangan"
        android:layout_width="@dimen/dimen_75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_alignParentEnd="true"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingLeft="@dimen/dimen_3dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:textSize="@dimen/dimen_15sp"
        android:visibility="visible"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"/>

</RelativeLayout>